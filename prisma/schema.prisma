datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  topTracks Track[]
  swipes    Swipe[]
}

model Track {
  id          Int     @id @default(autoincrement())
  spotifyId   String  @unique
  name        String
  artist      String
  energy      Float
  valence     Float
  tempo       Float
  popularity  Int
  coverImage  String?
  previewUrl  String?
  swipes      Swipe[]
  user        User?   @relation(fields: [userId], references: [id])
  userId      Int?
}

model Swipe {
  id      Int    @id @default(autoincrement())
  user    User   @relation(fields: [userId], references: [id])
  userId  Int
  track   Track  @relation(fields: [trackId], references: [id])
  trackId Int
  liked   Boolean
}
